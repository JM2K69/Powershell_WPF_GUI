						<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,7,0,0"> 
							<TextBlock Margin="0,10,0,0" FontSize="14">Shut down or Sign out</TextBlock>
						
							<Button Width="25" Height="25" x:Name="Shutdown_Menu" HorizontalAlignment="Right" Background="Transparent"  Style="{DynamicResource MetroCircleButtonStyle}" BorderThickness="0" Margin="0,0,0,0">					
